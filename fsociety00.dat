random_color() {
    local colors=("\033[0;31m" "\033[0;32m" "\033[1;33m" "\033[0;34m" "\033[0;35m" "\033[0;36m")
    local random_index=$((RANDOM % ${#colors[@]}))
    echo -e "${colors[$random_index]}"
}


